<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.6;net461</TargetFrameworks>
    <RootNamespace>Microsoft.Bot.Connector.Common</RootNamespace>
    <AssemblyName>Microsoft.Bot.Connector.Common</AssemblyName>
    <DefaultLanguage>en-US</DefaultLanguage>
    <authors>Microsoft</authors>
    <iconUrl>https://bots.botframework.com/Client/Images/bot-framework-default-7.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>This library implements the basic functionality required by any platform specific Bot Framework Connector</description>
    <summary>A platform agnostic base implementation of client REST API library for Microsoft Bot Framework Connector</summary>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DocumentationFile>bin\Release\Microsoft.Bot.Connector.Common.XML</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="1.1.0" />
    <PackageReference Include="Microsoft.IdentityModel.Protocols.OpenIdConnect" Version="2.1.2" />
    <PackageReference Include="Microsoft.Rest.ClientRuntime" Version="2.3.5" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
    <PackageReference Include="System.ComponentModel" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <PackageReference Include="System.Net.Http" Version="4.3.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Include="Swagger\*.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="generateClient.cmd" />
    <None Include="createpackage.cmd" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>