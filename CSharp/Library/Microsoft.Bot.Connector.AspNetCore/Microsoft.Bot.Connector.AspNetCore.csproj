<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.6;net461</TargetFrameworks>
    <RootNamespace>Microsoft.Bot.Connector.AspNetCore</RootNamespace>
    <AssemblyName>Microsoft.Bot.Connector.AspNetCore</AssemblyName>
    <DefaultLanguage>en-US</DefaultLanguage>
    <authors>Microsoft</authors>
    <iconUrl>https://bots.botframework.com/Client/Images/bot-framework-default-7.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>This library implements C# classes for using the Bot Framework Connector REST API using ASP.NET Core</description>
    <summary>ASP.NET Core client REST API library for Microsoft Bot Framework Connector</summary>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DocumentationFile>bin\$(Configuration)\Microsoft.Bot.Connector.AspNetCore.XML</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="1.1.0" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="5.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="1.0.2" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="createpackage.cmd" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.Bot.Connector.Shared\Microsoft.Bot.Connector.Common.csproj" />
  </ItemGroup>

</Project>